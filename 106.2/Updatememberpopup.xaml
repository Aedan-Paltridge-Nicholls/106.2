<Window x:Class="_106._2.Updatememberpopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_106._2"
        mc:Ignorable="d"
        Title="Updatememberpopup" Height="350" Width="300"
    FontFamily="Calibri" MinHeight="100" MinWidth="300">

    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".1*" />
                <ColumnDefinition Width="1.48*"/>
                <ColumnDefinition Width=".1*" />
                <ColumnDefinition Width="1.48*"/>
                <ColumnDefinition Width=".1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions >
                <RowDefinition Height=".05*"/>
                <RowDefinition Height=".1*"/>
                <RowDefinition Height=".05*"/>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
          
            <!--Label's-->

            <TextBox Grid.Row="1" BorderBrush="#000000"  Grid.Column="1" TextAlignment="Center"  Background="White" Text="New Member Info" MaxLines="1" />
            <TextBox Grid.Row="1"  BorderBrush="#000000"  Grid.Column="3" TextAlignment="Center"  Background="White" Text="Old Member Info" MaxLines="1" />
            
            <!--content-->

            <Border  Grid.Row="3"  Grid.Column="1" BorderBrush="#000000" BorderThickness="1" >
                <TextBlock IsEnabled="False" Background="White" x:Name="OldMemberInfo"/>
            </Border>
            <Border  Grid.Row="3"  Grid.Column="3" BorderBrush="#000000" BorderThickness="1" >
                <TextBlock IsEnabled="False" Background="White" x:Name="NewMemberInfo"/>
            </Border>
            <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width=".1*"/>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width=".1*"/>
                    <ColumnDefinition Width="1.1*"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height=".5*"/>
                </Grid.RowDefinitions>
                <Button x:Name="Updatemember" Foreground="#000000" Background="#C6C5FF"  BorderBrush="#000000"  Grid.Row="1" Grid.Column="0"  Click="Updatemember_Click"  FontWeight="Bold">Update Member</Button>
                <Button x:Name="UpdateLogin"  Foreground="#000000" Background="#C6C5FF"  BorderBrush="#000000"  Grid.Row="1" Grid.Column="2"  Click="UpdateLogin_Click"  FontWeight="Bold">Update Login</Button>
                <Button x:Name="cancelbutton" Foreground="#FFFFFF" Background="#FF1010"  BorderBrush="#000000"  Grid.Row="1" Grid.Column="4"  Click="CancelButton_Click"  FontWeight="Bold">Cancel Update</Button>


            </Grid>

        </Grid>
        
    </Grid>
</Window>
